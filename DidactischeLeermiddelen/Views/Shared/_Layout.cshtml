<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/highchart")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HoGent", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navNotClick" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="navbar-item navNotClick">@Html.ActionLink("Catalogus", "Index", "Catalogus")</li>
                    <li class="navbar-item navNotClick">@Html.ActionLink("Verlanglijst", "Index", "Verlanglijst")</li>
                    <li class="navbar-item navNotClick">@Html.ActionLink("Reservaties", "Index","Reservatie")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
        @*@if (Request.IsAjaxRequest())
            {
                TempData.Clear();
            }*@
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger tempdatas">@TempData["Error"]</div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success tempdatas">@TempData["Info"]</div>
        }
    @RenderBody()
    <hr/>
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - Hogeschool Gent -  Faculteit Mens en Welzijn</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
